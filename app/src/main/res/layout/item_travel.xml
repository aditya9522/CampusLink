<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/dividerColor"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/travel_time_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/badge_category"
            android:backgroundTint="@color/warningColor"
            android:paddingHorizontal="10dp"
            android:paddingVertical="3dp"
            android:text="20 MINS LEFT"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/travel_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/primaryLightColor"
            android:padding="12dp"
            android:src="@drawable/ic_travel"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
            app:tint="@color/primaryColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/travel_time_badge"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/travel_destination"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="To: Mumbai Airport"
            android:textColor="@color/textPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:letterSpacing="-0.01"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/travel_icon"
            app:layout_constraintTop_toTopOf="@id/travel_icon" />

        <TextView
            android:id="@+id/travel_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:text="Oct 24 â€¢ Ola Cabs"
            android:textColor="@color/textSecondary"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/travel_icon"
            app:layout_constraintTop_toBottomOf="@id/travel_destination" />

        <LinearLayout
            android:id="@+id/seat_visualization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/travel_icon">

            <!-- Filled seat -->
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_travel"
                app:tint="@color/primaryColor" />
            <!-- Filled seat -->
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/ic_travel"
                app:tint="@color/primaryColor" />
            <!-- Empty seat -->
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/ic_travel"
                app:tint="@color/dividerColor" />

            <TextView
                android:id="@+id/seats_left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="1 seat left"
                android:textColor="@color/primaryColor"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_join_travel"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_request"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="13sp"
            app:cornerRadius="12dp"
            android:backgroundTint="@color/primaryColor"
            android:paddingHorizontal="24dp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingVertical="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seat_visualization"
            android:layout_marginTop="12dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
