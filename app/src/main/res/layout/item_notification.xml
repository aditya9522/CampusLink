<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/surface"
    app:strokeColor="@color/dividerColor"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_notif_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@android:drawable/ic_popup_reminder"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
            app:strokeWidth="0dp"
            android:background="@color/primaryLightColor"
            app:tint="@color/primaryColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_notif_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Event: Hackathon 2024"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="-0.01" />

            <TextView
                android:id="@+id/tv_notif_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Join us for the biggest hackathon of the year!"
                android:textColor="@color/textSecondary"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:id="@+id/tv_notif_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="2 hours ago"
                android:textColor="@color/textSecondary"
                android:textSize="12sp"
                android:alpha="0.8" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
